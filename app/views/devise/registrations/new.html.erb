<section class="auth-wrap">
  <div class="panel auth-card">
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-grid" }) do |f| %>
      <%= render "shared/form_errors", resource: resource %>

      <div class="field-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>
      </div>

      <div class="field-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <span class="meta-text"><%= @minimum_password_length %> characters minimum</span>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", required: true, minlength: @minimum_password_length || 6 %>
      </div>

      <div class="field-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true, minlength: @minimum_password_length || 6 %>
      </div>

      <div>
        <%= f.submit "Sign up", class: "btn" %>
      </div>
    <% end %>

    <div class="devise-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</section>
