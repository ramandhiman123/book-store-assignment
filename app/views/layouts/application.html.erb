<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "BookStore" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="application-name" content="BookStore">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%= stylesheet_link_tag :application, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <header class="site-header">
      <div class="container site-header-inner">
        <%= link_to "Online Book Store", root_path, class: "brand-link" %>

        <nav class="site-nav">
          <% if user_signed_in? %>
            <span class="nav-badge"><%= current_user.email %></span>
            <% if current_user.author_profile.present? %>
              <%= link_to "Dashboard", author_dashboard_path, class: "nav-link" %>
              <%= link_to "Add Book", new_author_book_path, class: "nav-link" %>
              <%= link_to "Add Category", new_author_category_path, class: "nav-link" %>
            <% else %>
              <%= link_to "Become a Author", new_author_path, class: "nav-link" %>
            <% end %>
            <%= button_to "Sign out", destroy_user_session_path, method: :delete %>
          <% else %>
            <%= link_to "Sign in", new_user_session_path, class: "nav-link" %>
            <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
            <%= link_to "Add Author", new_author_path, class: "nav-link" %>
          <% end %>
        </nav>
      </div>
    </header>

    <main class="container main-content">
      <% if notice.present? %>
        <p class="flash notice"><%= notice %></p>
      <% end %>

      <% if alert.present? %>
        <p class="flash alert"><%= alert %></p>
      <% end %>

      <%= yield %>
    </main>
  </body>
</html>
